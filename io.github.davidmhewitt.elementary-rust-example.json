{
    "app-id": "io.github.davidmhewitt.elementary-rust-example",
    "runtime": "io.elementary.Platform",
    "runtime-version": "7.1",
    "sdk": "io.elementary.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "elementary-rust-example",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules": [{
        "name": "elementary-rust-example",
        "buildsystem": "simple",
        "build-options": {
            "env": {
                "CARGO_HOME": "/run/build/elementary-rust-example/cargo"
            }
        },
        "build-commands": [
            "cargo --offline fetch --manifest-path Cargo.toml --verbose",
            "cargo --offline build --release --verbose",
            "install -Dm755 ./target/debug/elementary-rust-example -t /app/bin/"
        ],
        "sources": [
            {
                "type": "dir",
                "path": "."
            },
            "cargo-sources.json"
        ]
    }]
}